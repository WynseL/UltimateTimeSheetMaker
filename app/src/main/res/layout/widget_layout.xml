<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/layout_default_black" >

    <ImageButton
        android:id="@+id/widget_layout_time_in"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/button_round_black"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_clock_in"
        android:text="TIME IN"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/widget_layout_open"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round_black"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_biohazard"
            android:text="HOLIDAY"
            android:textColor="@android:color/white" />


        <ImageButton
            android:id="@+id/widget_layout_holiday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round_black"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cake_variant"
            android:text="HOLIDAY"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/widget_layout_time_out"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/button_round_black"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_clock_out"
        android:text="TIME OUT"
        android:textColor="@android:color/white" />
</LinearLayout>