<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/color80LightBlack" />
            <stroke android:width="2sp" android:color="@color/color80LightBlack" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/color90LightBlack" />
            <stroke android:width="1sp" android:color="@color/colorBlack" />
        </shape>
    </item>
</selector>